<%= render 'shared/errors', obj: @category %>
<div class="mt-4 mb-4 container border border-dark rounded p-5">
  <%= form_for(@category, :html => {role: "form"}) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", placeholder: "Enter category name", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-primary"%>
  </div>
  <% end %>
  <%= link_to "Back to Articles List", articles_path %>
</div>
