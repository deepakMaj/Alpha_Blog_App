<h2 align="center" class="weight">Title : <%= @article.title %></h2>
<div class="well col-xs-9 col-xs-offset-2">
    <h4 class="center description" ><strong>Description:</strong></h4>
    <hr>
    <%= simple_format(@article.description) %>
  <div class="article-actions">
    <%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-xs btn-primary" %>
    <%= link_to "Delete this article", articles_path(@article), method: :delete,
        data: { confirm: "Are you sure to delete this article?" }, class:"btn btn-xs btn-danger"%>
    <%= link_to "Back to Article List", articles_path, class:"btn btn-xs btn-success" %>
  </div>
</div>
